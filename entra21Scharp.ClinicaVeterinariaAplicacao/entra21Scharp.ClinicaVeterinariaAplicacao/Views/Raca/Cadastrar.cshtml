@model Entra21.CSharp.ClinicaVeterinaria.Servico.viewModels.RacaCadastrarViewModel


@using Entra21.CSharp.ClinicaVeterinaria.Repositorio.Entidades
@{
    var especies = ViewBag.Especies as List<string>;
    especies.Add(string.Empty);

    var selectDasEspecies = new SelectList(especies, string.Empty);
}

<h2>Cadastro de Raça</h2>

<form asp-action="cadastrar" method="POST">
    <div>
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Especie" class="form-label"></label>
        <select asp-for="Especie" asp-items="selectDasEspecies" class="form-select"></select>
        <span asp-validation-for="Especie" class="text-danget"></span>
    </div>

    <div class="text-end">
        <a href="/raca" class="btn btn-outline-danger">Cancelar</a>
        <button type="submit" class="btn btn-success">Salvar</button>
    </div>
</form>